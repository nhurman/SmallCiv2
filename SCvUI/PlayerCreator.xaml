<UserControl x:Class="SCvUI.PlayerCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="107">
    
    <Grid>
        <TextBox x:Name="TName" HorizontalAlignment="Left" Height="23" Margin="170,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="LFaction" HorizontalAlignment="Left" Margin="170,38,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Dwarves" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Elves" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Orcs" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.167,1.538"/>
        <Label Content="Faction" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
